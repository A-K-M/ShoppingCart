@using ShoppingCart.Models
@model  PurchaseDetails
    @{
    Layout = null;
}
@{
    ViewBag.Title = "My Purchases";
}
@{
     List <PurchaseDetails> PP = (List<PurchaseDetails>)ViewData["PurchaseDetails"];
}
<table>
    <tr>
        <td>@Html.ActionLink("Log Out", "Index", "Login", new { sessionId = @sessionId }, null)</td>
    </tr>
</table>
<div style="line-height:20px">&nbsp;</div>

<table align="center" border="1">
    @foreach (var i in PP)
    {
        <tr>
            <td>
                <table align="center" border="1" width="100%">
                    <tr align="center"><td><img class="border" width="200" height="200" src=@PP.ImagePath /></td></tr>
                    <tr><td>@PP.PurchaseId</td></tr>
                    <tr><td>@PP.ProductId</td></tr>
                    <tr><td>@PP.ActivationCode</td></tr>
                </table>
            </td>
        </tr>
    }
    </table>
<style>
    td, tr, th {
        padding: 2px;
    }
</style>