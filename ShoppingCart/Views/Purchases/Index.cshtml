@using ShoppingCart.Models
@model Purchase

@{
    ViewBag.Title = "My Purchases";
}
@{
    List<PurchaseDetails> purchaseDetails = (List<PurchaseDetails>)ViewData["PurchaseDetails"];
    var sessionId = ViewData["sessionId"];

}
<table>
    <tr>
        <td>@Html.ActionLink("Log Out", "Index", "Login", new { sessionId = @sessionId }, null)</td>
    </tr>
</table>
<div style="line-height:20px">&nbsp;</div>

<table align="center" border="1">
    @foreach (var item in purchaseDetails)
    {
        <tr>
            <td>
                <table align="center" border="1" width="100%">
                    <tr align="center"><td><img class="border" width="200" height="200" src=@item.Product.ImagePath /></td></tr>
                    <tr><td>@item.PurchaseId</td></tr>
                    <tr><td>@item.ProductId</td></tr>
                    <tr><td>@item.ActivationCode</td></tr>
                    <tr><td>@item.Purchase.OrderDate</td></tr>
                </table>
            </td>
        </tr>
    }
</table>
    
<style>
    td, tr, th {
        padding: 2px;
    }
</style>