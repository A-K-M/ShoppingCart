@model IEnumerable<ShoppingCart.Models.Product>
@using ShoppingCart.Models
@{

    var customer = (Customer)ViewData["customer"];
    var name = customer.FirstName + " " + customer.LastName;
    var sessionId = ViewData["sessionId"];
    var cartQuantity = ViewData["cartQuantity"];
}


    @foreach (var item in Model)
    {
        <div class="col-sm-4">

            <table align="center" border="0" width="80%">
                <tr align="center"><td><img class="border" width="200" height="200" src=@Html.DisplayFor(modelItem => item.ImagePath) /></td></tr>
                <tr><td><center><b>@Html.DisplayFor(modelItem => item.ProductName)</b></center></td></tr>
                <tr><td><center>@Html.DisplayFor(modelItem => item.ProductDescription)</center></td></tr>
                <tr>
                    <td>
                        <center>
                            @Html.ActionLink( "$" + @Html.DisplayFor(modelItem => item.UnitPrice) + "- Add to Cart" , "AddToCart", "Cart",
                            new { productId = item.ProductId, customerId = customer.CustomerId}, new { @class = "btn btn-success btn-large" })
                        </center>
                        @*<input type="button" name="AddToCart" value="Add To Cart" onclick="AddCart(@customer.CustomerId,@product.ProductId)" />*@
                    </td>
                </tr>
            </table><span style="line-height:80px">&nbsp;</span>
        </div>
    }
